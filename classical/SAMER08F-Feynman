mport java.util.*;
import java.lang.*;
import java.io.*;
 
/* Name of the class has to be "Main" only if the class is public. */
class Ideone
{
	public static void main (String[] args) throws java.lang.Exception
	{
		// your code goes here
		Scanner scan =new Scanner(System.in);
		int n=scan.nextInt();
		int v;
		while(n!=0){
			v= n*(n+1)*((2*n)+1);
			v/=6;
			System.out.println(v);
			n= scan.nextInt();
		}	
	}
}
