#include <iostream>
#include <math.h>
#include <stdio.h>
#include <cmath>

using namespace std;

int main() {
	int n;
	int a[n];
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
	}
	for(int i=0;i<n;i++)
{ for(int j=a[i]+1;j<a[i]+10;j++)	
	{ 	int b = floor(log10(abs(j))) + 1;
		char x[b]; 
		sprintf(x,"%d",j);
		int c=b/2;
		int count=0;
		for(int k=0;k<c;k++)
		{
			if(x[k]!=x[b-k-1])
			{count++;}
		}
		if(count==0)
		{cout<<j<<endl;
        break;}
    }  //use char const* as target type
}
	// your code goes here
	return 0;
}
